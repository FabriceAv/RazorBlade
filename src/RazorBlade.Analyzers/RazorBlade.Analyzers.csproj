<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Nullable>disable</Nullable>
    <GenerateResourceUsePreserializedResources>true</GenerateResourceUsePreserializedResources>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.0.1" />
  </ItemGroup>

  <PropertyGroup>
    <RazorLanguageDir>..\..\lib\razor-compiler\src\Microsoft.AspNetCore.Razor.Language\src</RazorLanguageDir>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Include="$(RazorLanguageDir)\**\*.cs" Exclude="$(RazorLanguageDir)\obj\**\*.cs" Link="Microsoft.AspNetCore.Razor.Language\%(RecursiveDir)%(FileName)%(Extension)" />
    <EmbeddedResource Include="$(RazorLanguageDir)\**\*.resx" Link="Microsoft.AspNetCore.Razor.Language\%(RecursiveDir)%(FileName)%(Extension)" />
    <Compile Remove="$(RazorLanguageDir)\Properties\AssemblyInfo.cs" />
  </ItemGroup>

</Project>
